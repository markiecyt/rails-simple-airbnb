<div class="container mt-5">
  <h2>All our flats</h2>
  <p><%= link_to 'Add new flat', new_flat_path %></p>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card-trip">
        <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=1200" />
        <div class="card-trip-infos p-4">
          <div class="col">
            <h2><%= flat.name %></h2>
            <p>(<%= flat.address %>)</p>
            <div class="row justify-content-between align-items-center">
              <div class="col-4">
                <h2 class="card-trip-pricing">$<%= flat.price_per_night %> / night</h2>
              </div>
              <div class="col-4">
                <div class="row align-middle justify-content-end">
                  <%= link_to 'More info', flat_path(flat) %>
                  <%= link_to 'Edit', edit_flat_path(flat) %>
                  <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
